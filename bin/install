#!/usr/bin/env bash

install_scala() {
  local install_type=$1
  local version=$2
  local install_path=$3

  if ! which java >/dev/null; then
    echo "You need a Java Runtime already installed on your computer."
    echo "Follow the instructions for your platform or download it"
    echo "from http://java.com/en/download"
    exit 1
  fi

  if [ "version" != "${install_type}" ]; then
    echo "The asdf-scala plugin only supports installing official "
    echo "binary releases as built by the Scala team."
    echo "If you want to install another version from source, see: "
    echo "https://github.com/scala/scala/"
    exit 1
  fi

  local url_download="$(get_download_url $install_type $version)"

  if [ "Distribution file not found. Exiting" == "${url_download}" ]; then
    echo "The version specified was not found. Exiting"
    exit 1
  fi

  if [ "$TMPDIR" = "" ]; then
    local tmp_download_dir=$(mktemp -d)
  else
    local tmp_download_dir=$TMPDIR
  fi

  local source_path=$(get_download_file_path $install_type $version $tmp_download_dir)
  download_source_file_url "$url_download" $source_path

  (
    tar zxf $source_path -C $install_path --strip-components=1 || exit 1
  )
}

download_source_file() {
  local install_type=$1
  local version=$2
  local download_path=$3
  local download_url=$(get_download_url $install_type $version)

  curl -Lo $download_path -C - $download_url
}

download_source_file_url() {
  local url=$1
  local download_path=$2

  curl -Lo $download_path -C - $url
}
get_download_file_path() {
  local install_type=$1
  local version=$2
  local tmp_download_dir=$3

  local pkg_name="scala-${version}.tgz"

  echo "$tmp_download_dir/$pkg_name"
}

get_url_status() {
  local url="$1"
  local status="$(curl -s -I "$url" | grep 'HTTP/1.1' | awk '{print $2}')"

  echo "$status"
}

get_download_url() {
  local install_type=$1
  local version=$2
  local baseurl_lightbend="http://downloads.lightbend.com/scala/${version}/scala-${version}.tgz"
  local baseurl_lightbend2="http://downloads.lightbend.com/scala/${version}/scala-${version}.tar.gz"
  local baseurl_scalalang="http://www.scala-lang.org/files/archive/scala-${version}.tgz"
  local baseurl_scalalang2="http://www.scala-lang.org/files/archive/scala-${version}.tar.gz"

  local version2="$(echo $version | sed -e 's/.final/-final/g')"  
  local baseurl_scalalang_v2="http://www.scala-lang.org/files/archive/scala-${version2}.tgz"
  local baseurl_scalalang2_v2="http://www.scala-lang.org/files/archive/scala-${version2}.tar.gz"

  if [[ "x200" == "x$(get_url_status "$baseurl_lightbend")" ]]; then
    echo "$baseurl_lightbend" 
  elif [[ "x200" == "x$(get_url_status "$baseurl_lightbend2")" ]]; then
    echo "$baseurl_lightbend2" 
  elif [[ "x200" == "x$(get_url_status "$baseurl_scalalang")" ]]; then
    echo "$baseurl_scalalang"
  elif [[ "x200" == "x$(get_url_status "$baseurl_scalalang2")" ]]; then
    echo "$baseurl_scalalang2"
  elif [[ "x200" == "x$(get_url_status "$baseurl_scalalang_v2")" ]]; then
    echo "$baseurl_scalalang_v2"
  elif [[ "x200" == "x$(get_url_status "$baseurl_scalalang2_v2")" ]]; then
    echo "$baseurl_scalalang2_v2"
  else
    echo "Distribution file not found. Exiting"
    exit 1
  fi  
}

install_scala $ASDF_INSTALL_TYPE $ASDF_INSTALL_VERSION $ASDF_INSTALL_PATH
